<p id="notice"><%= notice %></p>

<h1>Listing Welcomes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @welcomes.each do |welcome| %>
      <tr>
        <td><%= link_to 'Pokaż', welcome %></td>
        <td><%= link_to 'Edytuj', edit_welcome_path(welcome) %></td>
        <td><%= link_to 'Usuń', welcome, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

